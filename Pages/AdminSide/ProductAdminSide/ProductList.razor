@page "/Admin/ProductList"
@page "/Admin/ProductList/{category}"
@attribute [Authorize(Roles = "admin")]
@layout Logged
@using oswald_online_shop.Data.AdminServices.ProductAdminServices



          <div class="flex items-center justify-center mt-10">
                   <a href="/productInsertEdit" class=> 
                   <button class=" shadow-2xl rounded-lg bg-rose-400  px-4 py-3 drop-shadow-md transition duration-300 hover:scale-105"><span class="text-gray-50 text-xl font-semibold"> Agregar nuevo producto</span></button>
                   </a>
            </div>
      <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 sm:gap-4 md:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4 p-6">

@if (productsAdmin==null)
{
      <div class=" w-full col-span-1 sm:col-span-2 md:col-span-2 lg:col-span-3 xl:col-span-4 ">
        <div class="relative w-1/2 bg-gray-100 p-4 border-t-2 border-gray-200 mx-auto rounded-lg ">
          <h1 class="text-center  font-semibold text-slate-800 sm:text-lg md:text-2xl  ">No hay productos agregados</h1>
          @* Right side*@          
<span class="absolute w-16 transform -rotate-[20deg] top-[22px] -right-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>
          <span class="absolute w-16 top-1/2 -right-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>
          <span class="absolute w-16  transform rotate-[18deg] top-[42px]  -right-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>

                    @* Left side*@          
<span class="absolute w-16 transform rotate-[20deg] top-[22px] -left-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>
          <span class="absolute w-16 top-1/2 -left-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>
          <span class="absolute w-16  transform -rotate-[18deg] top-[42px]   -left-16 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-md "></span>
</div>



      </div>
}else
{
     
    @foreach(var product in productsAdmin)
    {
    



        <div class="p-4 md:w-full">
          <div class="h-full overflow-hidden rounded-lg bg-gradient-to-r from-indigo-50 to-blue-50 shadow-xl hover:shadow-2xl transition duration-300">
            <img class="duration-400 w-full scale-110 object-cover object-center transition-all hover:scale-100 md:h-36 lg:h-48" src="@product.photoURL" alt="blog" />
            <div class="p-6">
              <h2 class="title-font mb-1 text-xs font-medium tracking-widest text-gray-400">@product.category</h2>
              <h1 class="title-font mb-3 text-lg font-medium text-gray-600">@product.name</h1>
              <div class="flex flex-wrap items-center justify-center">
                <a href="/productInsertEdit/@product.id"><button class="shadow-cla-blue rounded-lg bg-gradient-to-r from-cyan-400 to-blue-400 px-4 py-1 drop-shadow-md transition duration-300 hover:scale-105">Editar</button></a>
              </div>
              <br>
                   <div class="flex flex-wrap items-center justify-center">
                   <a href="/productdelete/@product.id"> <button class="shadow-cla-blue rounded-lg bg-gradient-to-r from-cyan-400 to-blue-400 px-4 py-1 drop-shadow-md transition duration-300 hover:scale-105">Eliminar</button></a>
              </div>
            </div>
          </div>
        </div>

        
    }
}
</div>

@code {
    [Parameter]
public  string category {get;set;}

    public  static IEnumerable<Product> productsAdmin{ get; set; }
    public static MyDBContext MydbContext = new MyDBContext();
    private static ProductAdminService productAdminServices = new ProductAdminService(MydbContext);
    

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (category==null)
            {
                productsAdmin = await productAdminServices.getAllProducts();
            }
            else
            {
                productsAdmin = await productAdminServices.getProductsByCategory(category);
            }

            
        }
        catch (Exception e)
        {
throw e;        }

    }

}